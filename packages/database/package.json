{
  "name": "@midu-app/database",
  "version": "0.1.0",
  "description": "Database schema and models for Midu App",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "default": "./dist/*/index.js"
    },
    "./**/*": {
      "types": "./dist/**/*.d.ts",
      "default": "./dist/**/*.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:gen": "drizzle-kit generate",
    "db:migrate": "tsx ./migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "postgres": "^3.4.7"
  },
  "devDependencies": {}
}
